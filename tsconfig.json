{
    "extends": "@vue/tsconfig/tsconfig.web.json",
    "include": ["env.d.ts", "src/**/*", "src/**/*.vue", "**/*.html"],
    "compilerOptions": {
        "baseUrl": ".",
        "lib": ["es2022", "dom"],
        "paths": {
            "@/*": ["./src/*"]
        },
        "target": "es2021",
        "module": "esnext",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "allowJs": true,
        "outDir": "build"
    },
    "references": [
        {
            "path": "./tsconfig.config.json"
        }
    ]
}
